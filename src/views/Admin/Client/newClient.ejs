    <header>
      <%- include('../../Navbar/nav.ejs'); %>
    </header>

    <title>Registro Paciente</title>
  </head>
  <body>
    
   


<div class="container">

  <br>
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
    Nuevo Cliente
  </button>
  <br><br>
  <!--TABLA-->

  <table id="listClients" class="display" style="width:100%">
    <thead>
      <tr>
        <th>#</th>
        <th>Cliente</th>
        <th>Telefono</th>
        <th>Direccion</th>
        <th>Email</th>
        <th>Edad</th>
        <th>Fecha Alta</th>
        <th>Modificar</th>
        <th>Eliminar</th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th>idCliente</th>
        <th>cliente</th>
        <th>telefono</th>
        <th>direccion</th>
        <th>email</th>
        <th>edad</th>
        <th>fechaAlta</th>
      </tr>
    </tfoot>
  </table>

  <!--TABLA-->
</div>
    

    



  
  <!-- Modal -->
  <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">Registro Cliente</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div class="container">
                <form id="formClient">

                  <div class="mb-3">
                    <label class="form-label">Nombre</label>
                    <input type="text" style="text-transform:uppercase;" class="form-control"  name="nombre" id="nombre" placeholder="Nombre..." required>
                  </div>

                  <div class="mb-3">
                    <label class="form-label">Apellido Parterno</label>
                    <input type="text" style="text-transform:uppercase;" class="form-control"  name="apellidoP" id="apellidoP" placeholder="Apellido Paterno..." required>
                  </div>

                  <div class="mb-3">
                    <label class="form-label">Apellido Materno</label>
                    <input type="text" style="text-transform:uppercase;" class="form-control"  name="apellidoM" id="apellidoM" placeholder="Apellido Materno..." required>
                  </div>

                  <div class="mb-3">
                    <label class="form-label">Telefono</label>
                    <input type="number" style="text-transform:uppercase;" class="form-control"  name="telefono" id="telefono" placeholder="Telefono..." required>
                  </div>
        

                  <div class="mb-3">
                    <label  class="form-label">Direccion</label>
                    <textarea class="form-control" id="direccion" name="direccion" rows="3" placeholder="Zinc #318 Col. Los Cristales, Guadalupe NL." required></textarea>
                  </div>

                  <div class="mb-3">
                    <label class="form-label">Edad</label>
                    <input type="number" style="text-transform:uppercase;" class="form-control"  name="edad" id="edad" placeholder="Edad..." required>
                  </div>
                
                  <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email"  class="form-control" name="email" id="email" placeholder="Email..." required>
                  </div>

            </div>
        </div>
        <div class="modal-footer">
          <button type="button" id="cerrarModal" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-primary">Registrar</button>
        </div>
      </form>
      </div>
    </div>
  </div>
  

 
